<script>
    // Add event listeners to block/unblock buttons
    document.querySelectorAll('.block-btn, .unblock-btn').forEach(button => {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            const userId = this.getAttribute('data-user-id');
            const action = this.classList.contains('block-btn') ? 'block' : 'unblock';
            console.log(action);
            // Show confirmation dialog
            Swal.fire({
                title: `Are you sure you want to ${action} this user?`,
                // icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: `Yes, ${action} user!`,
            }).then((result) => {
                if (result.isConfirmed) {
                    // Send AJAX request to backend
                    fetch(`/admin/block-unblock-user/${userId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ action }),
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.status === 'success') {
                                Swal.fire({
                                    title: 'Success!',
                                    text: data.message,
                                    icon: 'success',
                                }).then(() => {
                                    // Reload page to reflect changes
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.message,
                                    icon: 'error',
                                });
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                title: 'Oops!',
                                text: 'Something went wrong.',
                                icon: 'error',
                            });
                            console.error(error);
                        });
                }
            });
        });
    });
</script>

