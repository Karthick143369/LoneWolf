<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LoneWolf Admin Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .login-container {
            width: 100%;
            max-width: 1280px;
            min-height: 832px;
            background: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .login-form {
            max-width: 400px;
            padding: 2rem;
        }
        
        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .logo-container img {
            width: 120px;
        }
        
        .sign-in-btn {
            background-color: #dc3545;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            color: white;
            font-weight: 500;
            width: 100%;
            margin-top: 1.5rem;
        }
        
        .sign-in-btn:hover {
            background-color: #bb2d3b;
        }
        
        .welcome-text {
            color: #666;
            margin-bottom: 2rem;
        }
        
        .form-control {
            padding: 0.75rem 1rem;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            margin-bottom: 1rem;
        }
        
        .form-label {
            color: #495057;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="login-container d-flex align-items-center justify-content-center">
                    <div class="row w-100">
                        <div id="errorMessage" class="text-danger" style="text-align: center;font-weight: 900;margin: 15px 15px;" >
                            <!-- <strong>Warning:</strong> -->
                        </div>
                        <!-- Login Form Column -->
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <div class="login-form">
                                <p class="welcome-text">Welcome back admin!!!</p>
                                <h2 class="mb-4">sign in</h2>
                                <form id="adminLogin">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                                    </div>
                                    <button type="submit" class="sign-in-btn">SIGN IN â†’</button>
                                </form>
                            </div>
                        </div>
                        
                        <!-- Logo Column -->
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <div class="logo-container">
                                <img src="/public/adminHome/img/favicon/favicon.ico" alt="LoneWolf Logo">
                                <h3 class="mt-3">LONEWOLF</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        
        let submitForm = document.getElementById('adminLogin')
        submitForm.addEventListener('submit',async(event)=>{
        event.preventDefault()
        let email = document.getElementById('email').value
        let password = document.getElementById('password').value
        console.log(`----${email,password}----`);
            try {
        const response = await fetch("/admin/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            email,
            password,
          }),
        });
        console.log(response);
        if (response.ok) {
          window.location.href = "admin/dashboard";
        } else {
          const errorData = await response.json();
          const errorMessage = errorData.message || "An error occurred";
        //   throw new Error(errorMessage);
        
        document.getElementById("errorMessage").innerHTML =errorMessage;
        }
      } catch (error) {
        console.log(error);
      }
     });

 
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
