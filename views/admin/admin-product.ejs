<!-- Main Content -->
 <div class="main-content flex-grow-1">
        <!-- Header Section -->
        <div class="content-header">
            <div class="search-section">
                <i class="fas fa-search search-icon"></i>
                <input type="search" class="search-input" placeholder="Search products...">
            </div>
            <div class="header-actions">
                <button class="notification-btn">
                    <i class="fas fa-bell"></i>
                </button>
            </div>
        </div>

        <!-- Navigation Section -->
        <div class="content-nav">
            <div class="breadcrumb">
                <span class="breadcrumb-item">Products</span>
                <i class="fas fa-chevron-right" style="color: var(--text-light); font-size: 0.75rem;"></i>
                <span class="breadcrumb-item active">Product List</span>
            </div>
            <a href="/admin/product/addProduct" class="add-product-btn">
                <i class="fas fa-plus"></i> Add Product
            </a>
        </div>

        <!-- Filters -->
        <div class="filters">
            <button class="filter-btn">
                <i class="fas fa-calendar"></i>
                Select Dates
            </button>
            <button class="filter-btn">
                <i class="fas fa-filter"></i>
                Filter
            </button>
        </div>

        <!-- Product Table -->
        <div class="table-container">
            <table class="product-table">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Product</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length > 0) { %>
                        <% products.forEach((row, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <div class="product-info">
                                        <img src="<%= row.images[0] %>" alt="<%= row.productName %>" class="product-image">
                                        <span class="product-name"><%= row.productName %></span>
                                    </div>
                                </td>
                                <td>
                                    <span class="stock-badge <%= row.stock > 10 ? 'stock-high' : 'stock-low' %>">
                                        <%= row.stock %>
                                    </span>
                                </td>
                                <td>‚Çπ<%= row.price %>.00</td>
                                <td>
                                    <span class="status-badge <%= row.isActive ? 'status-active' : 'status-blocked' %>">
                                        <%= row.isActive ? 'Active' : 'Blocked' %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/admin/product/editProduct/<%= row._id %>" class="action-btn btn-edit">
                                        Edit
                                    </a>
                                    <% if(row.isActive) { %>
                                        <button class="action-btn btn-block" onclick="confirmAction('<%= row._id %>', 'block')">
                                            Block
                                        </button>
                                    <% } else { %>
                                        <button class="action-btn btn-unblock" onclick="confirmAction('<%= row._id %>', 'unblock')">
                                            Unblock
                                        </button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" style="text-align: center; padding: 2rem;">No products found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <a href="#" class="page-link active">1</a>
            <a href="#" class="page-link">2</a>
            <a href="#" class="page-link">3</a>
            <a href="#" class="page-link">4</a>
            <a href="#" class="page-link">5</a>
            <a href="#" class="page-link">...</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmAction(productId, action) {
            const actionText = action === 'block' ? 'Block' : 'Unblock';
            const actionUrl = `/admin/product/${action}/${productId}`;

            Swal.fire({
                title: `Are you sure you want to ${actionText.toLowerCase()} this product?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: action === 'block' ? '#ef4444' : '#22c55e',
                cancelButtonColor: '#64748b',
                confirmButtonText: `Yes, ${actionText}!`,
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = actionUrl;
                }
            });
        }
    </script>
</body>
