        --text-dark: #1e293b;
        --text-light: #64748b;
        --border-color: #e2e8f0;
    }

    body {
        font-family: 'Inter', -apple-system, sans-serif;
        margin: 0;
        padding: 0;
        background-color: var(--background-color);
    }

    /* Sidebar Styles */
