  <!-- Main Content -->
<div class="main-content">
    <h1 class="display-4 mb-0">Products with Offers</h1>
    <p class="lead">Manage your product offers and discounts</p>
<div class="container pb-5">
        <div class="row g-4">
            <% if(products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                        <div class="card product-card">
                            <div class="card-img-wrapper">
                                <img src="<%= product.images[0] %>" class="card-img-top" alt="<%= product.productName %>">
                                <% if (product.offer) { %>
                                    <div class="offer-badge">
                                        <i class="fas fa-tag me-1"></i>
                                        <%= product.offer.discountPercentage %>% OFF
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="card-body">
                                <h5 class="card-title text-truncate"><%= product.productName %></h5>
                                
                                <div class="price-section mb-3">
                                    <% if (product.offer) { %>
                                        <span class="original-price"> <i class="fa-solid fa-indian-rupee-sign"></i> <%= product.price %>.00</span>
                                        <span class="discounted-price">
                                            <i class="fa-solid fa-indian-rupee-sign"></i><%= (product.price * (1 - product.offer.discountPercentage/100)).toFixed(2) %>
                                        </span>
                                    <% } else { %>
                                        <span class="discounted-price"><i class="fa-solid fa-indian-rupee-sign"></i><%= product.price %>.00</span>
                                    <% } %>
                                </div>

                                <% if (product.offer) { %>
                                    <div class="offer-details">
                                        <h6 class="mb-2">
                                            <i class="fas fa-gift me-2"></i>
                                            <%= product.offer.offerName %>
                                        </h6>
                                        <div class="offer-dates mb-3">
                                            <div>
                                                <i class="fas fa-calendar-alt me-2"></i>
                                                Start: <%= new Date(product.offer.startDate).toLocaleDateString() %>
                                            </div>
                                            <div>
                                                <i class="fas fa-calendar-check me-2"></i>
                                                End: <%= new Date(product.offer.endDate).toLocaleDateString() %>
                                            </div>
                                        </div>
                                        <div class="d-flex action-buttons">
                                            <a href="/admin/product/editOffer/<%= product.offer._id %>" 
                                               class="btn btn-outline-primary flex-grow-1">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                            <button class="btn btn-outline-danger flex-grow-1 delete-offer-btn" 
                                                    data-product-id="<%= product.offer._id %>">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <a href="/admin/product/addOffer/<%= product._id %>" 
                                       class="btn btn-primary w-100">
                                        <i class="fas fa-plus me-1"></i> Add Offer
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        No products found
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.querySelectorAll('.delete-offer-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const productId = button.getAttribute('data-product-id');
                
                const result = await Swal.fire({
                    title: 'Delete Offer?',
                    text: 'This action cannot be undone',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="fas fa-trash-alt me-1"></i> Delete',
                    cancelButtonText: '<i class="fas fa-times me-1"></i> Cancel',
                    reverseButtons: true
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch(`/admin/product/offer/delete/${productId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const data = await response.json();
                        if (response.ok) {
                            await Swal.fire({
                                title: 'Deleted!',
                                text: data.success || 'Offer has been removed successfully',
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false
                            });
                            window.location.reload();
                        } else {
                            throw new Error(data.error || 'Failed to delete offer');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error',
                            text: error.message || 'Failed to delete offer',
                            icon: 'error'
                        });
                    }
                }
            });
        });
    </script>
</body>
</html>