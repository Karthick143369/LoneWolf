  <!-- Main Content -->
  <div class="main-content">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-2">Category Offers</h1>
                <p class="mb-0">Manage your category-specific discounts and promotions</p>
            </div>
            <a href="/admin/categoryOffer/add" class="btn btn-add btn-light">
                <i class="fas fa-plus me-2"></i>Add New Offer
            </a>
        </div>
    </div>

    <div class="table-container">
        <% if(categoryOffer && categoryOffer.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Offer Name</th>
                        <th>Discount</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categoryOffer.forEach(category => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="ms-2"><%= category?.categories?.name %></span>
                                </div>
                            </td>
                            <td><%= category.offerName %></td>
                            <td>
                                <span class="badge badge-custom badge-active">
                                    <%= category.discountPercentage %>% OFF
                                </span>
                            </td>
                            <td>
                                <div class="small text-muted">
                                    From: <%= new Date(category.startDate).toLocaleDateString() %><br>
                                    To: <%= new Date(category.endDate).toLocaleDateString() %>
                                </div>
                            </td>
                            <td>
                                <% const now = new Date();
                                   const endDate = new Date(category.endDate);
                                   const isActive = now <= endDate;
                                %>
                                <span class="badge badge-custom <%= isActive ? 'badge-active' : 'badge-expired' %>">
                                    <%= isActive ? 'Active' : 'Expired' %>
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/admin/categoryOffer/edit/<%= category._id %>" class="btn btn-primary action-btn">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger action-btn deleteCategoryOffer" data-id="<%= category._id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">üè∑Ô∏è</div>
                <h4>No Category Offers Found</h4>
                <p class="text-muted">Start by adding a new category offer to enhance your sales strategy</p>
                <a href="/admin/categoryOffer/add" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Create Your First Offer
                </a>
            </div>
        <% } %>
    </div>
</div>
