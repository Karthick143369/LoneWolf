  <!-- Main Content -->
    <main id="site-main">
        <div class="main-content">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">Coupon Management</h1>
                <a href="/admin/addCoupons" class="add-coupon-btn">+ Add New Coupon</a>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Active Coupons</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Coupon Name</th>
                                <th>Code</th>
                                <th>Discount</th>
                                <th>Max Amount</th>
                                <th>Valid From</th>
                                <th>Expires On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(coupons && coupons.length > 0) { %>
                                <% coupons.forEach((coupon, index) => { %>
                                    <tr>
                                        <td><%= coupon.couponName %></td>
                                        <td><span class="coupon-code"><%= coupon.couponCode %></span></td>
                                        <td><span class="discount-badge"><%= coupon.discountPercentage %>% OFF</span></td>
                                        <td>‚Çπ<%= coupon?.maxAmount %></td>
                                        <td class="date-cell"><%= new Date(coupon.startDate).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                                        <td class="date-cell"><%= new Date(coupon.expiryDate).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="/admin/editCoupon/<%= coupon._id %>">
                                                    <button type="button" class="btn btn-sm edit-btn">Edit</button>
                                                </a>
                                                <button type="button" class="btn btn-sm delete-btn" data-type="coupon" data-id="<%= coupon._id %>">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7">
                                        <div class="empty-state">
                                            <p class="mb-0">No coupons available. Click the "Add New Coupon" button to create one.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script>
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', async function() {
                    const type = this.dataset.type;
                    const id = this.dataset.id;
                    
                    const result = await Swal.fire({
                        title: 'Delete Coupon?',
                        text: 'This action cannot be undone',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc2626',
                        cancelButtonColor: '#64748b',
                        confirmButtonText: 'Yes, delete it!',
                        cancelButtonText: 'Cancel',
                        customClass: {
                            confirmButton: 'btn btn-danger',
                            cancelButton: 'btn btn-secondary'
                        }
                    });
    
                    if (result.isConfirmed) {
                        try {
                            const response = await fetch(`/admin/delete${type.charAt(0).toUpperCase() + type.slice(1)}/${id}`, {
                                method: 'DELETE',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
    
                            const data = await response.json();
    
                            if (response.ok) {
                                Swal.fire({
                                    title: 'Deleted!',
                                    text: 'Coupon has been removed successfully.',
                                    icon: 'success',
                                    confirmButtonColor: '#2563eb'
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: data.error || 'Failed to delete coupon.',
                                    icon: 'error',
                                    confirmButtonColor: '#2563eb'
                                });
                            }
                        } catch (error) {
                            Swal.fire({
                                title: 'Error!',
                                text: 'Failed to delete coupon.',
                                icon: 'error',
                                confirmButtonColor: '#2563eb'
                            });
                        }
                    }
                });
            });
        </script>

