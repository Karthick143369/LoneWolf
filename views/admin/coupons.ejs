        border-radius: 6px;
        transition: all 0.3s ease;
    }
    
    .btn-view:hover {
        background-color: var(--secondary-color);
    }
    
    .product-img {
        width: 50px;
        height: 50px;
        border-radius: 8px;
        object-fit: cover;
        margin-right: 1rem;
    }
    
    .product-cell {
        display: flex;
        align-items: center;
    }
    
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .status-pending {
        background-color: #fef3c7;
        color: var(--warning-color);
    }
    
    .status-processing {
        background-color: #e0f2fe;
        color: var(--info-color);
    }
    
    .status-delivered {
        background-color: #dcfce7;
        color: var(--success-color);
    }
    
    .status-cancelled {
        background-color: #fee2e2;
