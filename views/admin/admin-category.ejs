</div>

  <!-- Main Content -->
  <div class="main-content flex-grow-1">
    <!-- Enhanced Header -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body d-flex justify-content-between align-items-center py-3">
            <div class="input-group" style="max-width: 300px;">
                <input type="text" class="form-control border-end-0" placeholder="Search categories or brands...">
                <span class="input-group-text bg-white border-start-0">
                    <i class="fas fa-search text-muted"></i>
                </span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-light position-relative">
                    <i class="fas fa-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </button>
                <button class="btn btn-light">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Categories</h5>
                <span class="badge bg-primary rounded-pill"><%= locals.category.length %> Total</span>
            </div>
        </div>
        <div class="card-body">
            <div id="errorMessage" class="alert alert-danger mb-3" style="display: none;"></div>

            <ul class="list-group list-group-flush">
                <% if (locals.category.length === 0) { %>
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-folder-open fa-3x mb-3"></i>
                        <p>No categories found. Add your first category below.</p>
                    </div>
                <% } else { %>
                    <% locals.category.forEach((row, index) => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tag me-3 text-primary"></i>
                                <%= row.name %>
                            </div>
                            <div class="btn-group">
                                <a href="/admin/editCategory/<%= row._id %>" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm delete-btn" 
                                        data-type="category" data-id="<%= row._id %>">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </div>
                        </li>
                    <% }) %>
                <% } %>
            </ul>

            <!-- Add Category Form -->
            <div class="mt-4 p-3 bg-light rounded">
                <h6 class="mb-3">Add New Category</h6>
                <form id="categoryForm" class="row g-3 align-items-end">
                    <div class="col-md-9">
                        <label for="name" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="name" name="name" required
                               placeholder="Enter category name">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-1"></i> Add Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Brands Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Brands</h5>
                <span class="badge bg-primary rounded-pill"><%= locals.brand.length %> Total</span>
            </div>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <% if (locals.brand.length === 0) { %>
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-building fa-3x mb-3"></i>
                        <p>No brands found. Add your first brand below.</p>
                    </div>
                <% } else { %>
                    <% locals.brand.forEach((row, index) => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-copyright me-3 text-primary"></i>
                                <%= row.name %>
                            </div>
                            <div class="btn-group">
                                <a href="/admin/editBrand/<%= row._id %>" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm delete-btn" 
                                        data-type="brand" data-id="<%= row._id %>">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </div>
                        </li>
                    <% }) %>
                <% } %>
            </ul>

            <!-- Add Brand Form -->
            <div class="mt-4 p-3 bg-light rounded">
                <h6 class="mb-3">Add New Brand</h6>
                <form id="BrandForm" class="row g-3 align-items-end">
                    <div class="col-md-9">
                        <label for="brandName" class="form-label">Brand Name</label>
                        <input type="text" class="form-control" id="brandName" name="name" required
                               placeholder="Enter brand name">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-1"></i> Add Brand
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Enhanced form submission with better error handling and UI feedback
document.getElementById('categoryForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    const errorMessage = document.getElementById('errorMessage');
    const submitButton = event.target.querySelector('button[type="submit"]');
    const nameInput = document.getElementById('name');

    try {
        submitButton.disabled = true;
        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Adding...';

        const response = await fetch("/admin/categoryAdd", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                name: nameInput.value.trim(),
            }),
        });

        if (response.ok) {
            window.location.href = "/admin/category";
        } else {
            const errorData = await response.json();
            errorMessage.style.display = 'block';
            errorMessage.textContent = errorData.message || "An error occurred while adding the category.";
        }
    } catch (error) {
        errorMessage.style.display = 'block';
        errorMessage.textContent = "Network error occurred. Please try again.";
        console.error(error);
    } finally {
        submitButton.disabled = false;
        submitButton.innerHTML = '<i class="fas fa-plus me-1"></i> Add Category';
    }
});

// Enhanced delete confirmation with better UX
document.querySelectorAll('.delete-btn').forEach(button => {
    button.addEventListener('click', function() {
        const type = this.dataset.type;
        const id = this.dataset.id;
        const itemName = this.closest('li').querySelector('.d-flex').textContent.trim();

        Swal.fire({
            title: `Delete ${type}?`,
            html: `Are you sure you want to delete <strong>${itemName}</strong>?<br>This action cannot be undone.`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash-alt me-1"></i> Yes, delete it!',
            cancelButtonText: '<i class="fas fa-times me-1"></i> Cancel',
            reverseButtons: true,
            focusCancel: true
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/delete${type.charAt(0).toUpperCase() + type.slice(1)}/${id}`;
            }
        });
    });
});
</script>
