            font-weight: 600;
        }

        .offer-details {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
        }

        .offer-dates {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .price-section {
            display: flex;
            align-items: baseline;
            gap: 0.5rem;
        }

