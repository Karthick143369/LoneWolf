	<script>
		document.getElementById('forgotPassEmail').addEventListener('submit', async function (event) {
			event.preventDefault();

			const email = document.getElementById('email').value;
			try {
				const response = await fetch('/forgotPass/email', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({ email: email })
				})
